<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#ff808080"
>
    <!-- 结果显示框 -->
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        <TextView android:id="@+id/input"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"

                  android:textAppearance="?android:attr/textAppearanceLarge"
                  android:text="f(x)="/>
    </TableRow>
    <!-- 接下去采TableRow的格式进行布局设计 -->
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
    >
        <!-- 清除输出窗口的所有内容 -->
        <Button android:id="@+id/c"
                android:text="Clear"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
    </TableRow>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
    >
        <!-- 在角度和弧度之间切换 -->
        <!-- 正弦计算 -->
        <Button android:id="@+id/sin"
                android:text="sin"
                android:layout_weight="0.17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <!-- 余弦计算 -->
        <Button android:id="@+id/cos"
                android:text="cos"
                android:layout_weight="0.17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <!-- 正切计算 -->
        <Button android:id="@+id/tan"
                android:text="tan"
                android:layout_weight="0.17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        <!-- 开方 -->
        <Button android:id="@+id/sqrt"
                android:text="sqrt"
                android:layout_weight="0.17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <!-- 退格键 -->
        <Button android:id="@+id/bksp"
                android:text="←"
                android:layout_weight="0.17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
    </TableRow>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
    >
        <!-- 数字7 -->
        <Button android:id="@+id/seven"
                android:text="7"
                android:layout_weight="0.17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <!-- 数字8 -->
        <Button android:id="@+id/eight"
                android:text="8"
                android:layout_weight="0.17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <!-- 数字9 -->
        <Button android:id="@+id/nine"
                android:text="9"
                android:layout_weight="0.17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <!-- 除号 -->
        <Button android:id="@+id/divide"
                android:text="/"
                android:layout_weight="0.17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <!-- 左括号 -->
        <Button android:id="@+id/left"
                android:text="("
                android:layout_weight="0.17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <!-- 右括号 -->
        <Button android:id="@+id/right"
                android:text=")"
                android:layout_weight="0.17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
    </TableRow>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
    >
        <!-- 数字4 -->
        <Button android:id="@+id/four"
                android:text="4"
                android:layout_weight="0.17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <!-- 数字5 -->
        <Button android:id="@+id/five"
                android:text="5"
                android:layout_weight="0.17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <!-- 数字6 -->
        <Button android:id="@+id/six"
                android:text="6"
                android:layout_weight="0.17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <!-- 乘号 -->
        <Button android:id="@+id/mul"
                android:text="*"
                android:layout_weight="0.17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        <!-- e -->
        <Button android:id="@+id/e"
                android:text="e"
                android:layout_weight="0.17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <!-- 乘方 -->
        <Button android:id="@+id/square"
                android:text="^"
                android:layout_weight="0.17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
    </TableRow>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
    >
        <!-- 数字1 -->
        <Button android:id="@+id/one"
                android:text="1"
                android:layout_weight="0.17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <!-- 数字2 -->
        <Button android:id="@+id/two"
                android:text="2"
                android:layout_weight="0.17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <!-- 数字3 -->
        <Button android:id="@+id/three"
                android:text="3"
                android:layout_weight="0.17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <!-- 减号 -->
        <Button android:id="@+id/sub"
                android:text="-"
                android:layout_weight="0.17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <!-- 对数 -->
        <Button android:id="@+id/log"
                android:text="log"
                android:layout_weight="0.17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <!-- 自然对数 -->
        <Button android:id="@+id/ln"
                android:text="ln"
                android:layout_weight="0.17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
    </TableRow>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
    >
        <!-- 数字0 -->
        <Button android:id="@+id/zero"
                android:text="0"
                android:layout_weight="0.17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <!-- 小数点 -->
        <Button android:id="@+id/dot"
                android:text="."
                android:layout_weight="0.17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <!-- x -->
        <Button android:id="@+id/x"
                android:text="x"
                android:layout_weight="0.17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <!-- 加号 -->
        <Button android:id="@+id/add"
                android:text="+"
                android:layout_weight="0.17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <!-- 完成 -->
        <Button android:id="@+id/done"
                android:text="done"
                android:layout_weight="0.34"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
    </TableRow>

</LinearLayout>