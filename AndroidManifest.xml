<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="joseph.drawpad"
          android:installLocation="auto"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="19"/>
    <application android:label="@string/app_name" android:icon="@drawable/ic_launcher">
        <activity android:name=".activity.MainActivity"
                  android:theme="@android:style/Theme.Holo.Light.DarkActionBar"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.SecondActivity" android:label="@string/app_name">
            <intent-filter>
                <action android:name="test" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <service android:name=".service.MyService">
            <intent-filter>
                <action android:name="MY_SERVICE" />
            </intent-filter>
        </service>
        <service android:name=".service.MyRemoteService" android:process=":remote">
            <intent-filter>
                <action android:name="MY_REMOTE_SERVICE" />
            </intent-filter>
        </service>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>
